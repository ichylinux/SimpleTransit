<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jp.co.hybitz.simpletransit"
      android:versionCode="28" android:versionName="2.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".SimpleTransit"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 設定画面 -->
        <activity android:name=".Preferences"/>
        
        <!-- 検索履歴画面 -->
        <activity android:name=".history.QueryHistoryListActivity" />
        
        <!-- アラーム -->
        <receiver android:name=".alarm.OneTimeAlarm" android:process=":remote" />
        <activity android:name=".alarm.AlarmListActivity"/>
        <activity android:name=".alarm.AlarmPlayActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-sdk android:minSdkVersion="4"></uses-sdk>
</manifest> 
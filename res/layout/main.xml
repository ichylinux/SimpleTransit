<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewFrom" android:text="出発地">
	        </TextView>
	        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200px" android:maxLines="1" android:singleLine="true" android:id="@+id/from">
	        </EditText>
            <CheckBox android:text="@+string/checkbox_first" android:layout_marginLeft="20px" android:id="@+id/first" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
        </TableRow>
        <TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewTo" android:text="到着地">
            </TextView>
	        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200px" android:maxLines="1" android:singleLine="true" android:id="@+id/to">
	        </EditText>
            <CheckBox android:text="@+string/checkbox_last" android:layout_marginLeft="20px" android:id="@+id/last" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
        </TableRow>
        <TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">
		        <TextView android:text="時刻"
		                  android:layout_width="wrap_content" 
		                  android:layout_height="wrap_content" 
		                  android:id="@+id/TextViewTime">
		        </TextView>
            <TextView android:layout_height="wrap_content"
                      android:id="@+id/time"
                      android:background="@layout/time_border_enabled"
                      android:textSize="18sp"
                      android:textColor="#000000"
                      android:layout_marginLeft="3px"
                      android:layout_marginRight="3px">
            </TextView>
            <Button android:layout_marginLeft="20px"
                    android:layout_height="wrap_content"
                    android:text="検索"
                    android:id="@+id/search"
                    android:textSize="16sp">
            </Button>
        </TableRow>
    </TableLayout>

    <ListView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:isScrollContainer="true" android:id="@+id/results">
    </ListView>
</LinearLayout>

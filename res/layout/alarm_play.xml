<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="10dip"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView android:id="@+id/tv_alarm_notice" android:text="@string/tv_alarm_notice" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="10dip"/>
    <TextView android:id="@+id/tv_route" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="10dip"/>
    <Button android:id="@+id/alarm_stop"
        android:layout_width="wrap_content" android:layout_height="wrap_content" 
        android:text="@string/button_alarm_stop" android:layout_margin="10dip">
        <requestFocus />
    </Button>
</LinearLayout>

